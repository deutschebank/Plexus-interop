{
  "private": true,
  "name": "@plexus-interop/web",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "description": "Plexus Web Interop root module",
  "scripts": {
    "preinstall": "node ./scripts/replace-lock-registry.js && node ./scripts/replace-auth-vars.js --install",
    "postinstall": "node ./scripts/replace-lock-registry.js --backward",
    "prepare": "(is-ci || npm run husky)",
    "husky": "cd .. && husky web/.husky",
    "prebuild": "lerna exec -- shx rm -rf dist",
    "build": "npm run build-ts && npm run build-bundles",
    "prebuild-ts": "lerna run prebuild --stream",
    "build-ts": "tsc -b packages",
    "postbuild-ts": "npm run build-ts:esm && npm run build-ts:esm5",
    "build-ts:esm": "lerna exec --parallel --scope '@plexus-interop/{broker,client,client-api,common,common-api-impl,io,metadata,protocol,remote,transport-common,websocket-transport}' -- tsc --outDir dist/esm --module esnext --target es6 --importHelpers false",
    "build-ts:esm5": "lerna exec --parallel --scope '@plexus-interop/{broker,client,client-api,common,common-api-impl,io,metadata,protocol,remote,transport-common,websocket-transport}' -- tsc --outDir dist/esm5 --module esnext",
    "build-bundles": "lerna run build:bundle --stream",
    "watch": "tsc -b -w packages --preserveWatchOutput",
    "prepublish-all": "run-s publish:prepare publish:commit",
    "publish:prepare": "node ./scripts/replace-auth-vars.js --publish && lerna exec -- cross-var shx cp $LERNA_ROOT_PATH/.npmrc .npmrc",
    "publish:commit": "git commit -am \"chore: write .npmrc & version for CI publishing\"",
    "publish-all": "lerna publish from-package --loglevel=verbose",
    "postpublish-all": "shx rm -rf .npmrc && lerna exec -- shx rm -rf .npmrc",
    "lint": "eslint \"packages/**/*.{ts,js}\" --quiet",
    "lint:packages": "lerna run --stream lint",
    "test": "lerna run --stream test",
    "verify": "npm run lint && npm run test",
    "e2e-native": "cd ./packages/e2e && npm run e2e-native",
    "poste2e-native": "npm run coverage",
    "e2e-web": "cd ./packages/e2e && npm run e2e-web-electron && npm run e2e-web-chrome",
    "poste2e-web": "npm run coverage",
    "coverage": "nyc report --reporter=text --reporter=html",
    "build-e2e": "run-s build e2e-native e2e-web",
    "ci-build": "run-s build verify",
    "ci-build-e2e": "run-s build verify e2e-native e2e-web",
    "ci-publish": "run-s bump-version build verify publish-all",
    "bump-version": "cross-var lerna version $PLEXUS_BUILD_NPM_PACKAGE_VERSION --force-publish=* --loglevel=verbose",
    "benchmarks": "cd ./packages/e2e && npm run native-broker-benchmarks && npm run web-broker-benchmarks"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,js,css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@electron/remote": "^2.0.8",
    "@jsdevtools/coverage-istanbul-loader": "^3.0.5",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/chai": "^4.0.2",
    "@types/core-js": "^2.5.5",
    "@types/fs-extra": "5.0.1",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.2",
    "@types/jest": "^27.5.1",
    "@types/jstorage": "^0.3.30",
    "@types/long": "^4.0.0",
    "@types/mocha": "^2.2.43",
    "@types/node": "20.11.7",
    "@types/rx": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "babel-register": "^6.23.0",
    "chai": "^4.1.0",
    "chokidar": "^3.5.3",
    "copyfiles": "^2.4.1",
    "core-js": "^3.22.4",
    "cross-var": "1.1.0",
    "del-cli": "4.0.1",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-jsdoc": "^39.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "get-port": "^5.1.1",
    "glob": "^7.2.0",
    "glob-to-regexp": "^0.4.1",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.0",
    "husky": "^9.0.7",
    "if-env": "^1.0.4",
    "installing": "^1.0.0",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "jest-jasmine2": "^27.5.1",
    "kill-port": "^1.6.1",
    "lerna": "^8.0.2",
    "lint-staged": "^12.3.7",
    "minimist": "^1.2.6",
    "mocha": "^9.2.1",
    "mock-socket": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nx": "^17.3.0",
    "nyc": "^15.1.0",
    "optimize-plugin": "^1.1.0",
    "path": "^0.12.7",
    "prettier": "^2.5.1",
    "protobufjs": "^7.2.6",
    "protobufjs-cli": "^1.1.2",
    "prr": "1.0.1",
    "renamer": "^2.0.1",
    "shx": "^0.3.4",
    "strip-bom": "^3.0.0",
    "tree-kill": "^1.1.0",
    "ts-jest": "^27.1.4",
    "ts-mockito": "^2.6.1",
    "ts-node": "~3.2.0",
    "tslib": "^2.3.1",
    "typescript": "~4.4.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "engines": {
    "node": ">= 12"
  }
}
