{
  "name": "@plexus-interop/metadata",
  "types": "dist/main/src/index.d.ts",
  "description": "Plexus Interop Metadata management",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run build:main",
    "build:main": "tsc",
    "build:watch": "tsc -w -p tsconfig.json",
    "unit": "jest --coverage",
    "test": "npm run unit"
  },
  "dependencies": {
    "@plexus-interop/common": "file:../common",
    "@plexus-interop/protocol": "file:../protocol",
    "@plexus-interop/remote": "file:../remote"
  },
  "peerDependencies": {
    "rxjs": "^7.5.4"
  },
  "main": "dist/main/src/index.js",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRunner": "jest-jasmine2",
    "setupFilesAfterEnv": ["<rootDir>/setup-jasmine.js"],
    "testMatch": ["<rootDir>/tests/**/*.spec.ts"],
    "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts"]
  }
}
