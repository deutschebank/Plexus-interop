{
  "name": "@plexus-interop/broker",
  "description": "Plexus Interop Broker",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "sideEffects": false,
  "main": "./dist/main/src/index.js",
  "module": "./dist/esm5/src/index.js",
  "es2015": "./dist/esm/src/index.js",
  "types": "./dist/main/src/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist/main/src/index.js",
      "es2015": "./dist/esm/src/index.js",
      "default": "./dist/esm5/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run build:main && npm run build:bundle",
    "build:main": "tsc",
    "build:watch": "tsc -w",
    "build:bundle": "webpack",
    "test": "jest --coverage --passWithNoTests"
  },
  "dependencies": {
    "@plexus-interop/client": "file:../client",
    "@plexus-interop/client-api": "file:../client-api",
    "@plexus-interop/common": "file:../common",
    "@plexus-interop/metadata": "file:../metadata",
    "@plexus-interop/protocol": "file:../protocol",
    "@plexus-interop/transport-common": "file:../transport-common",
    "long": "^4.0.0",
    "protobufjs": "7.1.2",
    "reflect-metadata": "^0.1.10",
    "tslib": "^2.3.1",
    "ya-js-storage": "0.1.4"
  },
  "peerDependencies": {
    "rxjs": "^7.5.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jasmine.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
