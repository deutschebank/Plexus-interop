{
  "name": "@plexus-interop/broker",
  "types": "dist/main/src/index.d.ts",
  "description": "Plexus Interop Broker",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "scripts": {
    "prebuild": "npm run lint && trash dist",
    "build": "npm run build:main && npm run build:bundle",
    "build:main": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:bundle": "browserify dist/main/src/api/CrossDomainHostEntryPoint.js -s proxyHost -o dist/main/src/CrossDomainHostBuilder.bundle.js",
    "lint": "tslint src/**/*.ts",
    "pretest": "npm run lint",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@plexus-interop/client": "file:../client",
    "@plexus-interop/client-api": "file:../client-api",
    "@plexus-interop/common": "file:../common",
    "@plexus-interop/metadata": "file:../metadata",
    "@plexus-interop/protocol": "file:../protocol",
    "@plexus-interop/transport-common": "file:../transport-common",
    "long": "^4.0.0",
    "protobufjs": "6.11.2",
    "reflect-metadata": "^0.1.10",
    "tslib": "^2.3.1",
    "ya-js-storage": "0.1.4"
  },
  "main": "dist/main/src/index.js",
  "peerDependencies": {
    "protobufjs": "6.11.2",
    "rxjs": "^7.5.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jasmine.js",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": ".+/dist/main/tests/.+.spec.js$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "dist/main/src/**/*.js",
      "!dist/main/src/gen/**/*.js",
      "!src/*.d.ts",
      "!src/**/*.d.ts",
      "!src/**/*.spec.ts"
    ]
  }
}
