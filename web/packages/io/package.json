{
  "name": "@plexus-interop/io",
  "description": "Plexus Interop serialization/deserialization services",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "sideEffects": false,
  "main": "./dist/main/src/index.js",
  "module": "./dist/esm5/src/index.js",
  "es2015": "./dist/esm/src/index.js",
  "types": "./dist/main/src/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist/main/src/index.js",
      "es2015": "./dist/esm/src/index.js",
      "default": "./dist/esm5/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run build:main",
    "build:main": "tsc -p tsconfig.json",
    "build:watch": "tsc -w",
    "unit": "jest --coverage",
    "test": "npm run unit"
  },
  "dependencies": {
    "@plexus-interop/common": "file:../common",
    "@plexus-interop/metadata": "file:../metadata",
    "@plexus-interop/protocol": "file:../protocol",
    "protobufjs": "6.11.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRunner": "jest-jasmine2",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jasmine.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
