{
  "name": "@plexus-interop/io",
  "types": "dist/main/src/index.d.ts",
  "description": "Plexus Interop serialization/deserialization services",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "scripts": {
    "prebuild": "yarn lint && trash dist",
    "build": "yarn build:main",
    "postbuild": "yarn test",
    "build:main": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "lint": "tslint src/**/*.ts",
    "unit": "jest --coverage",
    "pretest": "yarn lint",
    "test": "yarn unit"
  },
  "dependencies": {
    "@plexus-interop/common": "file:../common",
    "@plexus-interop/metadata": "file:../metadata",
    "@plexus-interop/protocol": "file:../protocol",
    "protobufjs": "6.11.2"
  },
  "main": "dist/main/src/index.js",
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "testEnvironment": "node",
    "testRunner": "jest-jasmine2",
    "setupFilesAfterEnv": ["<rootDir>/setup-jasmine.js"],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": ".+/dist/main/tests/.+.spec.js$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "dist/main/src/**/*.js",
      "!dist/main/src/gen/**/*.js",
      "!src/*.d.ts",
      "!src/**/*.d.ts",
      "!src/**/*.spec.ts"
    ]
  }
}
