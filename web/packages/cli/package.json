{
  "name": "@plexus-interop/cli",
  "version": "0.1.0",
  "main": "plexus.js",
  "description": "Plexus Interop CLI tools",
  "license": "Apache-2.0",
  "preferGlobal": true,
  "bin": {
    "plexus": "./plexus.js"
  },
  "sideEffects": false,
  "scripts": {
    "prebuild": "npm run copy-assets && npm run rename-lib",
    "copy-assets": "copyfiles -f ../../../dsl/gen/cli/build/libs/cli-*-all.jar dist/lib",
    "rename-lib": "renamer --find cli-.*-all.jar --replace plexusgen.jar dist/lib/* && trash dist/lib/cli-.*-all.jar",
    "build": "npm run build:main",
    "postinstall": "node ./install.js",
    "postbuild": "npm run test",
    "build:main": "tsc",
    "build:watch": "tsc -w",
    "unit": "jest --coverage",
    "pretest": "trash dist/gen",
    "test": "if-env PLEXUS_CLI_TESTS_ENABLED=true && npm run cli-test || echo 'CLI tests disabled'",
    "cli-test": "node ./install.js && npm run unit"
  },
  "dependencies": {
    "adm-zip": "0.4.11",
    "commander": "^4.0.0",
    "fs-extra": "5.0.0",
    "progress": "2.0.0",
    "protobufjs": "6.11.2",
    "request": "2.88.0",
    "tar": "4.4.18",
    "tar-fs": "1.16.2",
    "tslib": "^2.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": ".+/dist/main/tests/.+spec.js$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "dist/main/src/**/*.js",
      "!dist/main/src/gen/**/*.js",
      "!src/*.d.ts",
      "!src/**/*.d.ts",
      "!src/**/*.spec.ts"
    ]
  }
}
