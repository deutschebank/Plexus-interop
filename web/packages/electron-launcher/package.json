{
  "name": "@plexus-interop/electron-app-launcher",
  "version": "1.0.0",
  "description": "Plexus Electron App Launcher Example",
  "productName": "Plexus Electron App Launcher",
  "license": "Apache-2.0",
  "main": "./dist/electronLauncher.bundle.js",
  "private": true,
  "scripts": {
    "prebuild": "npm run gen-launcher-protocol",
    "build": "npm run build:main && npm run build:bundle",
    "build:bundle": "npm run copy-gen-folders && npm run package && npm run build-binary",
    "package": "webpack",
    "copy-gen-folders": "copyfiles src/launcher/gen/* dist/main",
    "build:main": "tsc",
    "test": "npm run unit",
    "unit": "jest --coverage --passWithNoTests",
    "gen-launcher-js": "pbjs --force-long -t static-module -r launcher -w commonjs -o src/launcher/gen/plexus-messages.js -p ../../../dsl/interop-lang/src/main/resources/interop/ app_launcher_service.proto app_launch_mode.proto unique_id.proto",
    "gen-launcher-ts": "pbts --force-long -o src/launcher/gen/plexus-messages.d.ts src/launcher/gen/plexus-messages.js",
    "gen-launcher-protocol": "npm run gen-launcher-js && npm run gen-launcher-ts",
    "build-binary": "npx electron-packager ./ ElectronAppLauncher --overwrite --out=../../../bin/win-x86/samples/greeting/apps --no-prune",
    "postbuild-binary": "npm run rename-packages && copyfiles ElectronAppLauncher.cmd ../../../bin/win-x86/samples/greeting",
    "prestart": "npm run build",
    "start": "electron .",
    "rename-packages": "del-cli --force ../../../bin/win-x86/samples/greeting/apps/ElectronAppLauncher && renamer --find \"/ElectronAppLauncher-.*/i\" --replace ElectronAppLauncher ../../../bin/win-x86/samples/greeting/apps/*"
  },
  "keywords": [
    "plexus",
    "electron",
    "launcher"
  ],
  "electronPackagerConfig": {
    "packageManager": false,
    "derefSymlinks": true
  },
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "@plexus-interop/client": "1.0.0",
    "@plexus-interop/common": "1.0.0",
    "@plexus-interop/protocol": "1.0.0",
    "@plexus-interop/transport-common": "1.0.0",
    "@plexus-interop/websocket-transport": "1.0.0",
    "loglevel": "^1.4.1",
    "minimist": "^1.2.0",
    "protobufjs": "6.11.3",
    "protobufjs-cli": "1.0.2",
    "rxjs": "^7.5.4",
    "strip-bom": "^3.0.0",
    "ws": "^3.2.0"
  },
  "devDependencies": {
    "electron": "17.4.0",
    "electron-log": "^2.2.9",
    "electron-mocha": "^11.0.2",
    "electron-packager": "^16.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jasmine.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
