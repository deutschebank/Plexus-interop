{
  "name": "@plexus-interop/remote",
  "types": "dist/main/src/index.d.ts",
  "description": "Plexus Interop Utilities for accessing remote Services",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run build:main",
    "build:main": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "lint": "tslint src/**/*.ts",
    "unit": "jest --coverage --passWithNoTests",
    "test": "npm run unit"
  },
  "dependencies": {
    "@plexus-interop/common": "file:../common",
    "superagent": "3.8.2",
    "tslib": "^2.3.1"
  },
  "peerDependencies": {
    "rxjs": "^7.5.4"
  },
  "main": "dist/main/src/index.js",
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/setup-jasmine.js"],
    "testMatch": ["<rootDir>/tests/**/*.spec.ts"],
    "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts"]
  }
}
