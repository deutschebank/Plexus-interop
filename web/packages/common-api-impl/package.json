{
  "name": "@plexus-interop/common-api-impl",
  "types": "dist/main/src/index.d.ts",
  "description": "Common API implementation",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "scripts": {
    "prebuild": "npm run lint && trash dist",
    "build": "npm run build:main && npm run build:bundle",
    "build:main": "tsc -p tsconfig.json",
    "build:bundle": "npm run create-bundle",
    "create-bundle": "browserify dist/main/src/api/InteropPlatformFactory.js -x websocket -s PlexusPlatformFactory -o dist/main/src/platform-factory.bundle.js",
    "build:watch": "tsc -w -p tsconfig.json",
    "lint": "tslint src/**/*.ts",
    "pretest": "npm run lint",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@plexus-interop/client": "file:../client",
    "@plexus-interop/client-api": "file:../client-api",
    "@plexus-interop/common": "file:../common",
    "@plexus-interop/io": "file:../io",
    "@plexus-interop/metadata": "file:../metadata",
    "@plexus-interop/protocol": "file:../protocol",
    "@plexus-interop/remote": "file:../remote",
    "@plexus-interop/transport-common": "file:../transport-common",
    "@plexus-interop/websocket-transport": "file:../websocket-transport",
    "tslib": "^2.3.1"
  },
  "peerDependencies": {
    "rxjs": "^7.5.4"
  },
  "main": "dist/main/src/index.js",
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jasmine.js",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": ".+/dist/main/tests/.+.spec.js$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "dist/main/src/**/*.js",
      "!dist/main/src/gen/**/*.js",
      "!src/*.d.ts",
      "!src/**/*.d.ts",
      "!src/**/*.spec.ts"
    ]
  }
}
